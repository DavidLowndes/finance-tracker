<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <a class="navbar-brand" id="logo" href="/">FinanceTracker3000</a>
    <% if current_user %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav col-md-5">
          <li><%= link_to "My Portfolio", my_portfolio_path  %></li>
          <li><%= link_to "My Profile", edit_user_registration_path(current_user) %></li>
        <li><%= link_to "My Friends", my_friends_path %></li>
        </ul>
        <ul class="nav navbar-right col-md-4 no-margin">
          <li class="col-md-9 user-name text-right">
            <i class="fa fa-user"></i>
            <%= current_user.full_name == "Anonymous" ? current_user.email : current_user.full_name %>
          </li>
          <li class="col-md-3 logout"><%= link_to "Logout", destroy_user_session_path, class: "btn btn-sm btn-danger", method: :delete %></li>
        </ul>  
      </div>
    <% end %>
  </div>
</div>